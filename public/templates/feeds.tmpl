{{define "title"}}Feeds - Solanum{{end}}

{{define "content"}}
<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
    <h1 style="margin: 0;">Your Feeds</h1>
    <div style="display: flex; gap: 0.5rem;">
        <button class="btn btn-primary" onclick="document.getElementById('add-modal').classList.add('show')">Add Feed</button>
        <a href="/feeds/import" class="btn btn-secondary">Import Feeds</a>
    </div>
</div>

<!-- Modal for adding feeds -->
<div id="add-modal" class="modal" onclick="if(event.target === this) this.classList.remove('show')">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Add Feed</h2>
            <button class="modal-close" onclick="document.getElementById('add-modal').classList.remove('show')">&times;</button>
        </div>
        <form action="/feeds" method="POST">
            <div class="form-group">
                <label for="url">Feed URL</label>
                <input type="url" id="url" name="url" placeholder="https://example.com/feed.xml" required autofocus class="input">
            </div>
            <div style="display: flex; gap: 0.5rem; margin-top: 1rem;">
                <button type="submit" class="btn btn-primary">Add Feed</button>
                <button type="button" class="btn btn-secondary" onclick="document.getElementById('add-modal').classList.remove('show')">Cancel</button>
            </div>
        </form>
    </div>
</div>

{{if .Feeds}}
    {{range .Feeds}}
    <div class="card">
        <div style="display: flex; justify-content: space-between; align-items: flex-start; gap: 1rem;">
            <div style="flex: 1; min-width: 0;">
                <h3 style="margin: 0 0 0.5rem 0;">
                    <a href="/feeds/{{.RKey}}/view" style="color: var(--text-primary); text-decoration: none;">{{.Title}}</a>
                </h3>
                <div style="font-size: 0.875rem; color: var(--text-tertiary); word-break: break-all;">{{.URL}}</div>
                {{if .Description}}
                <p style="margin: 0.5rem 0 0 0; color: var(--text-secondary);">{{.Description}}</p>
                {{end}}
            </div>
            <form action="/feeds/{{.RKey}}/delete" method="POST" style="flex-shrink: 0;" 
                  onsubmit="return confirm('Delete this feed?')">
                <button type="submit" class="btn btn-danger btn-sm" title="Delete feed">âœ•</button>
            </form>
        </div>
    </div>
    {{end}}
{{else}}
    <div class="empty-state">
        <p>No feeds yet. <a href="#" onclick="document.getElementById('add-modal').classList.add('show'); return false;">Add your first feed</a> or <a href="/feeds/import">import feeds</a>.</p>
    </div>
{{end}}
{{end}}
