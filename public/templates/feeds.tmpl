{{define "title"}}Feeds - Solanum{{end}}

{{define "content"}}
<style>
.card-actions .btn {
    min-width: 100px;
    text-align: center;
    padding: 0.5rem 1rem;
    box-sizing: border-box;
}

.page-actions .btn {
    min-width: 120px;
    text-align: center;
    padding: 0.5rem 1rem;
    box-sizing: border-box;
}
</style>

<h1>Your Feeds</h1>
<p class="page-actions">
    <button class="btn" onclick="document.getElementById('add-modal').classList.add('show')">Add Feed</button>
    <a href="/feeds/import" class="btn btn-secondary">Import Feeds</a>
</p>

<!-- Modal for adding feeds -->
<div id="add-modal" class="modal" onclick="if(event.target === this) this.classList.remove('show')">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Add Feed</h2>
            <button class="modal-close" onclick="document.getElementById('add-modal').classList.remove('show')">&times;</button>
        </div>
        <form action="/feeds" method="POST">
            <div class="form-group">
                <label for="url">Feed URL</label>
                <input type="url" id="url" name="url" placeholder="https://example.com/feed.xml" required autofocus>
            </div>
            <button type="submit" class="btn">Add Feed</button>
            <button type="button" class="btn btn-secondary" onclick="document.getElementById('add-modal').classList.remove('show')">Cancel</button>
        </form>
    </div>
</div>

{{if .Feeds}}
    {{range .Feeds}}
    <div class="card">
        <h3 class="card-title">
            <a href="/feeds/{{.RKey}}/view">{{.Title}}</a>
        </h3>
        <div class="card-meta">{{.URL}}</div>
        {{if .Description}}
        <p>{{.Description}}</p>
        {{end}}
        <div class="card-actions">
            <a href="/feeds/{{.RKey}}/view" class="btn btn-secondary">View Posts</a>
            <form action="/feeds/{{.RKey}}/delete" method="POST" style="display:inline" 
                  onsubmit="return confirm('Delete this feed?')">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
    {{end}}
{{else}}
    <div class="empty">
        <p>No feeds yet. <a href="#" onclick="document.getElementById('add-modal').classList.add('show'); return false;">Add your first feed</a> or <a href="/feeds/import">import feeds</a>.</p>
    </div>
{{end}}
{{end}}
