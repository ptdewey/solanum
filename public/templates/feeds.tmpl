{{define "title"}}Feeds - Solanum{{end}}

{{define "content"}}
<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; flex-wrap: wrap; gap: 0.75rem;">
    <h1 style="margin: 0;">Your Feeds</h1>
    <div style="display: flex; gap: 0.5rem;">
        <button class="btn-icon btn-primary" onclick="document.getElementById('add-modal').classList.add('show')">
            <svg viewBox="0 0 24 24"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
            <span>Add Feed</span>
        </button>
        <a href="/feeds/import" class="btn-icon btn-ghost">
            <svg viewBox="0 0 24 24"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="17 8 12 3 7 8"></polyline><line x1="12" y1="3" x2="12" y2="15"></line></svg>
            <span>Import</span>
        </a>
    </div>
</div>

<!-- Modal for adding feeds -->
<div id="add-modal" class="modal" onclick="if(event.target === this) this.classList.remove('show')">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Add Feed</h2>
            <button class="modal-close" onclick="document.getElementById('add-modal').classList.remove('show')">&times;</button>
        </div>
        <form action="/feeds" method="POST">
            <div class="form-group">
                <label for="url">Feed URL</label>
                <input type="url" id="url" name="url" placeholder="https://example.com/feed.xml" required autofocus class="input">
            </div>
            <div style="display: flex; gap: 0.5rem; margin-top: 1rem;">
                <button type="submit" class="btn-icon btn-primary">
                    <svg viewBox="0 0 24 24"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                    <span>Add Feed</span>
                </button>
                <button type="button" class="btn btn-secondary" onclick="document.getElementById('add-modal').classList.remove('show')">Cancel</button>
            </div>
        </form>
    </div>
</div>

<style>
/* Mobile: buttons move below content */
@media (max-width: 900px) {
    .feed-source-item .feed-item-header .entry-actions {
        display: none;
    }
    
    .feed-source-item .entry-actions-mobile {
        display: flex !important;
        width: 100%;
        gap: 0.5rem;
        margin-top: 1rem;
    }
    
    .feed-source-item .entry-actions-mobile .btn-icon {
        flex: 1;
    }
}

@media (min-width: 901px) {
    .feed-source-item .entry-actions-mobile {
        display: none !important;
    }
}
</style>

{{if .Feeds}}
    {{range .Feeds}}
    <div class="feed-item feed-source-item">
        <div class="feed-item-header">
            <h3 class="feed-item-title">
                <a href="/feeds/{{.RKey}}/view">{{.Title}}</a>
            </h3>
            <div class="entry-actions">
                <form action="/feeds/{{.RKey}}/delete" method="POST" style="display:inline"
                      onsubmit="return confirm('Delete this feed?')">
                    <button type="submit" class="btn-icon-only btn-danger" title="Delete feed">
                        <svg viewBox="0 0 24 24"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg>
                    </button>
                </form>
            </div>
        </div>
        <div class="feed-item-meta" style="word-break: break-all;">{{.URL}}</div>
        {{if .Description}}
        <p class="feed-item-description">{{.Description}}</p>
        {{end}}
        
        <!-- Mobile action buttons -->
        <div class="entry-actions-mobile">
            <form action="/feeds/{{.RKey}}/delete" method="POST" style="flex: 1;"
                  onsubmit="return confirm('Delete this feed?')">
                <button type="submit" class="btn-icon btn-danger" style="width: 100%;">
                    <svg viewBox="0 0 24 24"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg>
                    <span>Delete</span>
                </button>
            </form>
        </div>
    </div>
    {{end}}
{{else}}
    <div class="empty-state">
        <p>No feeds yet. <a href="#" onclick="document.getElementById('add-modal').classList.add('show'); return false;">Add your first feed</a> or <a href="/feeds/import">import feeds</a>.</p>
    </div>
{{end}}
{{end}}
