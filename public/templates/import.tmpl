{{define "title"}}Import Feeds - Solanum{{end}}

{{define "leaflet-subscriptions"}}
{{if eq (len .Subscriptions) 0}}
    {{if gt .AlreadyImported 0}}
    <div class="empty-state">All {{.AlreadyImported}} Leaflet subscription(s) have already been imported!</div>
    {{else}}
    <div class="empty-state">No Leaflet subscriptions found in your account.</div>
    {{end}}
{{else}}
<form action="/feeds/import/leaflet/import" method="POST">
    <div class="select-actions">
        <button type="button" onclick="selectAll()">Select All</button> | 
        <button type="button" onclick="selectNone()">Select None</button>
    </div>
    <div class="import-list">
        {{range .Subscriptions}}
        <label class="import-item">
            <input type="checkbox" class="import-checkbox" name="publications" value="{{.Publication}}">
            <div class="import-item-info">
                <div class="import-item-title">{{.Title}}</div>
                <div class="import-item-url">{{.RSSURL}}</div>
            </div>
        </label>
        {{end}}
    </div>
    {{if gt .AlreadyImported 0}}
    <p style="color: var(--text-tertiary); margin-top: 1rem; font-size: 0.875rem;">{{.AlreadyImported}} subscription(s) already imported.</p>
    {{end}}
    <div class="import-actions">
        <button type="submit" class="btn btn-primary">Import Selected</button>
        <button type="button" class="btn btn-secondary" onclick="document.getElementById('import-modal').classList.remove('show')">Cancel</button>
    </div>
</form>
{{end}}
{{end}}

{{define "leaflet-results"}}
{{if and (eq (len .Available) 0) (eq (len .Failed) 0)}}
<div class="empty-state">All your Leaflet subscriptions have already been imported!</div>
{{else}}
{{if gt (len .Available) 0}}
<form action="/feeds/import/leaflet/import" method="POST">
    <div class="select-actions">
        <button type="button" onclick="selectAll()">Select All</button> | 
        <button type="button" onclick="selectNone()">Select None</button>
    </div>
    <div class="import-list">
        {{range .Available}}
        <label class="import-item">
            <input type="checkbox" class="import-checkbox" name="feeds" value="{{.RSSURL}}">
            <div class="import-item-info">
                <div class="import-item-title">{{.Title}}</div>
                <div class="import-item-url">{{.RSSURL}}</div>
            </div>
        </label>
        {{end}}
    </div>
    <div class="import-actions">
        <button type="submit" class="btn btn-primary">Import Selected</button>
        <button type="button" class="btn btn-secondary" onclick="document.getElementById('import-modal').classList.remove('show')">Cancel</button>
    </div>
</form>
{{end}}
{{if gt .AlreadyImported 0}}
<p style="color: var(--text-tertiary); margin-top: 1rem; font-size: 0.875rem;">{{.AlreadyImported}} subscription(s) already imported.</p>
{{end}}
{{if gt (len .Failed) 0}}
<div class="error-section">
    <h4>Could not resolve ({{len .Failed}})</h4>
    <p style="font-size: 0.875rem; color: var(--text-tertiary); margin-bottom: 0.5rem;">These publications may have been deleted or are unavailable.</p>
    <div class="import-list" style="max-height: 150px;">
        {{range .Failed}}
        <div class="import-item import-item-error">
            <span class="error-icon">âœ—</span>
            <div class="import-item-info">
                <div class="import-item-title">{{if .Title}}{{.Title}}{{else}}{{.Publication}}{{end}}</div>
                <div class="import-item-url">{{.Error}}</div>
            </div>
        </div>
        {{end}}
    </div>
</div>
{{end}}
{{end}}
{{end}}

{{define "content"}}
<h1 style="margin-bottom: 1.5rem;">Import Feeds</h1>

<div class="card">
    <h2 style="margin: 0 0 0.5rem 0; font-size: 1.25rem;">Import from Leaflet</h2>
    <p style="margin: 0 0 1rem 0; color: var(--text-secondary);">Import your RSS subscriptions from <a href="https://leaflet.pub" target="_blank" rel="noopener">Leaflet</a>.</p>
    
    <button 
        class="btn btn-primary"
        hx-get="/feeds/import/leaflet/fetch"
        hx-target="#import-modal-content"
        hx-swap="innerHTML"
        onclick="document.getElementById('import-modal').classList.add('show')"
    >
        Fetch Leaflet Subscriptions
    </button>
</div>

<!-- Import Modal -->
<div id="import-modal" class="modal" onclick="if(event.target === this) closeImportModal()">
    <div class="modal-content" style="max-width: 600px; max-height: 80vh;">
        <div class="modal-header">
            <h2>Import from Leaflet</h2>
            <button class="modal-close" onclick="closeImportModal()">&times;</button>
        </div>
        <div id="import-modal-content">
            <div class="loading">
                <div class="loading-spinner"></div>
                <p>Fetching subscriptions...</p>
            </div>
        </div>
    </div>
</div>

<style>
    .import-list {
        max-height: 500px;
        overflow-y: auto;
        margin: 1rem 0;
    }
    .import-item {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        padding: 0.75rem;
        border: 1px solid var(--forest-300);
        background: var(--forest-100);
        border-radius: 6px;
        margin-bottom: 0.5rem;
        transition: all 0.2s ease;
        cursor: pointer;
    }
    .import-item:hover {
        background: var(--forest-200);
        border-color: var(--moss-500);
    }
    .import-item input[type="checkbox"] {
        width: auto;
        margin: 0;
        margin-top: 0.25rem;
        flex-shrink: 0;
    }
    .import-item-info {
        flex: 1;
        min-width: 0;
    }
    .import-item-title {
        font-weight: 500;
        word-break: break-word;
        color: var(--forest-950);
    }
    .import-item-url {
        font-size: 0.875rem;
        color: var(--text-tertiary);
        word-break: break-all;
    }
    .import-item-error {
        border-color: #cc0000;
        background: rgba(204, 0, 0, 0.05);
        cursor: default;
    }
    .import-item-error:hover {
        background: rgba(204, 0, 0, 0.05);
        border-color: #cc0000;
    }
    .import-item-error .error-icon {
        color: #cc0000;
        font-weight: bold;
    }
    .import-item-error .import-item-title {
        color: var(--text-tertiary);
    }
    .error-section {
        margin-top: 1.5rem;
        padding-top: 1rem;
        border-top: 1px solid var(--forest-300);
    }
    .error-section h4 {
        color: #cc0000;
        margin: 0 0 0.5rem;
    }
    .select-actions {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }
    .select-actions button {
        background: none;
        border: none;
        color: var(--moss-500);
        cursor: pointer;
        padding: 0;
        font-size: 0.875rem;
    }
    .select-actions button:hover {
        color: var(--moss-600);
        text-decoration: underline;
    }
    .loading {
        text-align: center;
        padding: 2rem;
    }
    .loading-spinner {
        display: inline-block;
        width: 24px;
        height: 24px;
        border: 3px solid var(--forest-300);
        border-top-color: var(--moss-500);
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }
    @keyframes spin {
        to { transform: rotate(360deg); }
    }
    .import-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
    }
    .import-result {
        padding: 1rem;
        border-radius: 4px;
        margin-top: 1rem;
    }
    .import-result.success {
        background: rgba(0, 153, 0, 0.1);
        border: 1px solid #009900;
    }
    .import-result.error {
        background: rgba(204, 0, 0, 0.1);
        border: 1px solid #cc0000;
    }
</style>

<script>
function closeImportModal() {
    document.getElementById('import-modal').classList.remove('show');
}
function selectAll() {
    document.querySelectorAll('.import-checkbox').forEach(cb => cb.checked = true);
}
function selectNone() {
    document.querySelectorAll('.import-checkbox').forEach(cb => cb.checked = false);
}
</script>
{{end}}
