{{define "title"}}Reading List - Solanum{{end}}

{{define "content"}}
<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
    <h1 style="margin: 0;">Reading List</h1>
    <div style="display: flex; gap: 0.5rem;">
        <button class="btn btn-primary" onclick="document.getElementById('add-modal').classList.add('show')">
            Add Link
        </button>
        {{if .HasArchived}}
        <a href="/reading-list/archive" class="btn btn-secondary">View Archive</a>
        {{end}}
    </div>
</div>

<!-- Modal for adding links -->
<div id="add-modal" class="modal" onclick="if(event.target === this) this.classList.remove('show')">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Add a Link</h2>
            <button class="modal-close" onclick="document.getElementById('add-modal').classList.remove('show')">&times;</button>
        </div>
        <form action="/reading-list" method="POST">
            <div class="form-group">
                <label for="url">URL</label>
                <input type="url" id="url" name="url" placeholder="https://example.com/article" required autofocus class="input">
            </div>
            <div class="form-group">
                <label for="title">Title (optional)</label>
                <input type="text" id="title" name="title" placeholder="Leave blank to fetch from page" class="input">
            </div>
            <div class="form-group">
                <label for="description">Description (optional)</label>
                <textarea id="description" name="description" placeholder="Leave blank to fetch from page" class="input" style="min-height: 80px;"></textarea>
            </div>
            <div style="display: flex; gap: 0.5rem; margin-top: 1rem;">
                <button type="submit" class="btn btn-primary">Add to Reading List</button>
                <button type="button" class="btn btn-secondary" onclick="document.getElementById('add-modal').classList.remove('show')">Cancel</button>
            </div>
        </form>
    </div>
</div>

{{if .Active}}
    {{range .Active}}
    <div class="card">
        <h3 style="margin: 0 0 0.5rem 0;"><a href="{{.URL}}" target="_blank" rel="noopener noreferrer" style="color: var(--text-primary); text-decoration: none;">{{.Title}}</a></h3>
        <div style="font-size: 0.875rem; color: var(--text-tertiary); word-break: break-all; margin-bottom: 0.5rem;">{{.URL}}</div>
        {{if .Description}}
        <p style="margin: 0 0 0.5rem 0; color: var(--text-secondary);">{{.Description}}</p>
        {{end}}
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div style="font-size: 0.875rem; color: var(--text-tertiary);">Added {{.CreatedAt.Format "Jan 2, 2006"}}</div>
            <form action="/reading-list/{{.RKey}}/archive" method="POST" style="display:inline">
                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
            </form>
        </div>
    </div>
    {{end}}
{{else}}
    <div class="empty-state">
        <p>No items in your reading list yet.</p>
    </div>
{{end}}

{{end}}
